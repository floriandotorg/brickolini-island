{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "maxSize": 5000000
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 320,
    "indentStyle": "space",
    "indentWidth": 2,
    "useEditorconfig": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "nursery": {
        "useSortedClasses": "error"
      },
      "suspicious": {
        "noIrregularWhitespace": "error"
      },
      "complexity": {
        "noUselessEscapeInRegex": "error"
      },
      "style": {
        "useCollapsedIf": "error",
        "useTrimStartEnd": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "arrowParentheses": "asNeeded"
    }
  }
}
